{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Template for lambda function.",
    "Parameters": {
        "Environment": {
            "Type": "String",
            "Description": "Environment to deploy lambda to"
        },
        "FunctionName": {
            "Type": "String",
            "Description": "The name of the lambda function"
        },
        "Version": {
            "Type": "String",
            "Description": "S3 object version"
        }
    },
    "Resources": {
        "LambdaFunction": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "FunctionName": {"Fn::Sub": "${Environment}.${FunctionName}"},
                "Handler": "index.handler",
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaRole",
                        "Arn"
                    ]
                },
                "Code": {
                    "S3Bucket": "qft-lambdas",
                    "S3Key": {"Fn::Sub": "${Environment}.${FunctionName}-src"},
                    "S3ObjectVersion": "LHqoUs_08IcroMv7k0RHnUxmEyelW3n_"
                },
                "Runtime": "nodejs12.x",
                "Timeout": 300
            }
        },
        "LambdaRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {"Fn::Sub": "${Environment}.${FunctionName}-role"},
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "AWSLambdaBasicExecutionRole",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            }
        }
    }
}